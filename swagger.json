{
    "openapi": "3.0.0",
    "info": {
        "title": "Service of schedule appointment",
        "description": "That API is has been designed to scheduling appointment",
        "version": "1.0.0"
    },
    "paths": {
        "/specialities": {
            "post": {
                "tags": ["Speciality"],
                "description": "Cadastro de especialidade",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                               "$ref": "#/components/schemas/SpecialityRequest"
                          }
                       }
                    }
                 },
                 "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SpecialityResponse"
                                }
                            }
                        }
                    }
                 }
              }
           },
           "/logins": {
             "post": {
                "description": "User Authenticate",
                "tags": ["users"],
                "requestBody":{
                    "content": {
                        "application/json":{
                            "schema": {
                                "$ref": "#/components/schemas/LoginRequest"
                            }
                        }
                    }
                },
                "responses":{
                    "200": {
                        "description": "Token gerado"
                    },
                    "401": {
                        "description": "Error message"
                    }
                }
             }
           }
        },
        "components": {
            "schemas": {
               "SpecialityRequest": {
                  "type": "object",
                  "properties": {
                    "name": {
                        "type": "string",
                        "description": "Nome da especialidade",
                        "example": "NAME_TEST"
                     },
                     "description": {
                        "type": "string",
                        "description": "Descricao da especialidade",
                        "example": "DESCRIPTION_TEST"
                     }
                  },
                  "required": ["name", "description"]
               },
               "SpecialityResponse": {
                "type": "object",
                "properties": {
                  "name": {
                      "type": "string",
                      "description": "Nome da especialidade",
                      "example": "NAME_TEST"
                   },
                   "description": {
                      "type": "string",
                      "description": "Descricao da especialidade",
                      "example": "DESCRIPTION_TEST"
                   },
                   "id": {
                    "type": "string",
                    "description": "Id da especialidade cadastradas",
                    "format": "uuid"
                   },
                   "createdAt": {
                    "type": "string",
                    "description": "Data de criacao da especialidade",
                    "format": "date-time"
                   }
                  }
               },
               "LoginRequest": {
                 "type": "object",
                 "properties": {
                   "username": {
                      "type": "string",
                      "description": "username de login",
                      "example": "username_test"
                    },
                    "password": {
                        "type": "string",
                        "description": "password de login",
                        "example": "password_test"
                    }
                  }
               }
            }
        }
    }