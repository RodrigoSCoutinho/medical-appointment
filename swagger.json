{
    "openapi": "3.0.0",
    "info": {
        "title": "Service of schedule appointment",
        "description": "That API is has been designed to scheduling appointment",
        "version": "1.0.0"
    },
    "paths": {
        "/specialities": {
            "post": {
                "tags": ["Speciality"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "description": "Cadastro de especialidade",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                               "$ref": "#/components/schemas/SpecialityRequest"
                          }
                       }
                    }
                 },
                 "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SpecialityResponse"
                                }
                            }
                        }
                    }
                 }
              }
           },
           "/logins": {
             "post": {
                "description": "User Authenticate",
                "tags": ["users"],
                "requestBody":{
                    "content": {
                        "application/json":{
                            "schema": {
                                "$ref": "#/components/schemas/LoginRequest"
                            }
                        }
                    }
                },
                "responses":{
                    "200": {
                        "description": "Token gerado"
                    },
                    "401": {
                        "description": "Error message"
                    }
                }
             }
           },
           "/doctors": {
             "post": {
                "description": "Cadastro do Medico",
                "tags": ["doctors"],
                "requestBody":{
                    "content": {
                        "application/json":{
                            "schema": {
                                "$ref": "#/components/schemas/DoctorRequest"
                           }
                        }
                     }
                  },
                  "responses":{
                    "200": {
                        "description": "Medico criado com sucesso"
                    },
                    "400": {
                        "description": "Erro de cadastro"
                    }
                }
              }
           }
        },

        "components": {
            "schemas": {
               "SpecialityRequest": {
                  "type": "object",
                  "properties": {
                    "name": {
                        "type": "string",
                        "description": "Nome da especialidade",
                        "example": "NAME_TEST"
                     },
                     "description": {
                        "type": "string",
                        "description": "Descricao da especialidade",
                        "example": "DESCRIPTION_TEST"
                     }
                  },
                  "required": ["name", "description"]
               },
               "SpecialityResponse": {
                "type": "object",
                "properties": {
                  "name": {
                      "type": "string",
                      "description": "Nome da especialidade",
                      "example": "NAME_TEST"
                   },
                   "description": {
                      "type": "string",
                      "description": "Descricao da especialidade",
                      "example": "DESCRIPTION_TEST"
                   },
                   "id": {
                    "type": "string",
                    "description": "Id da especialidade cadastradas",
                    "format": "uuid"
                   },
                   "createdAt": {
                    "type": "string",
                    "description": "Data de criacao da especialidade",
                    "format": "date-time"
                   }
                  }
               },
               "LoginRequest": {
                 "type": "object",
                 "properties": {
                   "username": {
                      "type": "string",
                      "description": "username de login",
                      "example": "username_test"
                    },
                    "password": {
                        "type": "string",
                        "description": "password de login",
                        "example": "password_test"
                    }
                  }
               },
               "DoctorRequest": {
                "type": "object",
                "properties": {
                  "crm": {
                     "type": "string",
                     "description": "CRM do Medico",
                     "example": "123456",
                     "length": 6
                     },
                     "email": {
                        "type": "string",
                        "description": "Email do Medico",
                        "example": "email@email.com.br"
                     },
                     "username": {
                        "type": "string",
                        "description": "Username do medico",
                        "example": "username_test"
                     },
                     "password": {
                        "type": "string",
                        "description": "Password do medico",
                        "example": "password"
                      },
                      "name": {
                        "type": "string",
                        "description": "Mome do medico",
                        "example": "username_test"
                      },
                      "specialityId": {
                        "type": "string",
                        "description": "Especialidade do medico",
                        "format": "uuid"
                      }
                  }
               }
            },
            "securitySchemes": {
                "bearerAuth": {
                    "description": "Authenticate from API",
                    "type": "http",
                    "scheme": "bearer",
                    "bearerFormats": "JWT",
                    "tokenUrl": "https://localhost:3000/login"
                }
            }
        }
    }